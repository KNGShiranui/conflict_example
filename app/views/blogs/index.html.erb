<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3"></div>
    </div>
<p id="notice"><%= notice %></p>

<h1 class="text-center">ブログ一覧</h1>

<hr>

<table class="text-center mx-auto">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog, class: "btn btn-outline-primary mx-1" %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-outline-success mx-1" %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger mx-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<div class="text-center">
<td><%= link_to 'New Blog', new_blog_path, class: "btn btn-primary " %></td>
</div>
</div>